{% extends 'base.html.twig' %}
{% block header %}
    <header>
        <div>
            <nav class="navbar navbar-expand-lg  bg-light header">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link m-1" href={{ path('index') }}><h3>Back</h3></a>
                            </li>
                            <li class="content-section-heading offset-11">
                                    <h2 class="text-secondary mb-0 mt-1">Portfolio</h2>
                                {% if category is defined%}
                                    <h4 class="text-dark mb-0 mt-1 text-right">{{ category }}</h4>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        </div>
        <!-- Navigation -->
        <a class="menu-toggle rounded" id="menu-button" href="#">
            <i class="fas fa-filter"></i>
        </a>
        <nav id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <h3><a class="nav-link m-1" href="{{ path('stylePortfolio') }}">Style</a></h3>
                </li>
                <li class="sidebar-nav-item">
                    <h3><a class="nav-link m-1" href="{{ path('muaPortfolio') }}">Make-up</a></h3>
                </li>
            </ul>
        </nav>
    </header>
{% endblock %}
{% block body %}
    <div class="container-custom">
        <a class="nav-link card-img-overlay" id="menu-button" href={{ path('index') }}>
            <i class="fas fa-angle-left"></i>
        </a>
        <div class="content-section-heading text-center" id="page-top">
            <h2 class="text-secondary mb-0 mt-3">Portfolio</h2>
            {% if category is defined %}
                <h4 class="text-dark mt-2 offset-2">{{ category }}</h4>
            {% endif %}
        </div>
        <div class="row no-gutters mt-0">
            {% for photoshoot in pagination %}
                <div class="col-lg-4">
                    <a class="portfolio-item" data-fancybox data-src="#portfolio-item-{{ photoshoot.id }}" href="javascript:;">
                    <span class="caption">
                      <span class="caption-content">
                        <h2>{{ photoshoot.title }}</h2>
                        <p class="mb-0">{{ photoshoot.shortDescription }}</p>
                      </span>
                    </span>
                        <img class="img-portfolio" src="uploads/images/{{ photoshoot.id }}/{{ photoshoot.images.shiftU.image }}" alt="">
                    </a>
                    <div style="display: none" id="portfolio-item-{{ photoshoot.id }}">
                        <div class="page-title photoshoot-title">
                            <h2>{{ photoshoot.title | title}}</h2>
                        </div>
                        <div class="photoshoot-text">
                            {{ photoshoot.description }}
                        </div>
                        <div>
                            <a href="uploads/images/{{ photoshoot.id }}/{{ photoshoot.images.shiftU.image }}" data-fancybox="gallery-{{ photoshoot.id }}">
                                <img class="img-photoshoot" src="uploads/images/{{ photoshoot.id }}/{{ photoshoot.images.shift.image }}" alt="">
                            </a>
                        </div>
                        <div class="photoshoot-description">
                            Model: <em>{{ photoshoot.model }}</em><br>
                            Photographer: <em>{{ photoshoot.photographer }}</em>
                        </div>
                        <div class="container-custom">
                            {% for image in photoshoot.images %}
                                <a href="uploads/images/{{ photoshoot.id }}/{{ image.image }}" data-fancybox="gallery-{{ photoshoot.id }}">
                                    <img class="img-photoshoot" src="uploads/images/{{ photoshoot.id }}/{{ image.image }}" alt="">
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <div class=" mt-4">
        {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}