{% extends 'base.html.twig' %}
{% block header %}
    <header>
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bg-light header">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link m-1" href={{ path('index') }}><h3>Back</h3></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!-- Navigation -->
    <a class="menu-toggle rounded" id="menu-button" href={{ path('index') }}>
        <i class="fas fa-angle-left"></i>
    </a>
{% endblock %}
{% block body %}
    <div class="container-custom">
        <div class="content-section-heading text-center">
            <h2 class="text-secondary mb-0">Portfolio</h2>
        </div>
        <div class="row no-gutters">
            {% for photoshoot in pagination %}
                <div class="col-4">
                    <a class="portfolio-item" href="#portfolio-item-{{ photoshoot.id }}">
                    <span class="caption">
                      <span class="caption-content">
                        <h2>{{ photoshoot.title }}</h2>
                        <p class="mb-0">{{ photoshoot.description | slice(0,70) }}</p>
                      </span>
                    </span>
                        <img class="img-portfolio" src="{{ photoshoot.images.shift.image }}" alt="">
                    </a>
                    <div class="text-popup">
                        <div class="page-title" style="text-align: left; font-family: 'Spectral', serif;">
                            <h2>{{ photoshoot.title }}</h2>
                        </div>
                        <div class="mb-4" style="text-align: justify; font-family: 'Spectral', serif; padding-left: 25%">
                            {{ photoshoot.description }}
                        </div>
                        <div>
                            <a href="{{ photoshoot.images.shift.image }}" data-fancybox="gallery">
                                <img class="img-fluid" src="{{ photoshoot.images.shift.image }}" alt="">
                            </a>
                        </div>
                        <div class="mb-4">
                            Model:{{ photoshoot.model }}<br>
                            Photographer: {{ photoshoot.photographer }}
                        </div>
                        <div class="container-custom">
                            {% for image in photoshoot.images %}
                            <a href="{{ image.image }}" data-fancybox="gallery">
                                <img class="img-fluid" src="{{ image.image }}" alt="">
                            </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <div class=" mt-4">
        {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}