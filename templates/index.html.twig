{% extends 'base.html.twig' %}
{% block body %}
    <!-- Page-Top -->
    <div class="container-custom-page-top" id="page-top">
        <div id="carousel-top" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ info.mainImage1 }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{ info.mainImage2}}" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
    </div>
    <!-- Portfolio -->
    <section class="content-section" id="portfolio">
        <div class="container">
            <div class="content-section-heading text-center">
                <h3 class="text-secondary mb-0">Portfolio</h3>
                <h2 class="mb-3">Recent Projects</h2>
            </div>
            <div class="row">
                {% for photoshoot in mainPhotoshoots %}
                    <div class="portfolio-window col-lg-6 col-sm-6">
                        <a class="portfolio-item" data-fancybox data-src="#portfolio-item-{{ photoshoot.id }}" href="javascript:;">
                    <span class="caption">
                      <span class="caption-content">
                        <h2>{{ photoshoot.title }}</h2>
                        <p class="mb-0">{{ photoshoot.shortDescription }}</p>
                      </span>
                    </span>
                            <img class="img-portfolio" src="uploads/images/{{ photoshoot.id }}/{{ photoshoot.images.shiftU.image }}" alt="">
                        </a>
                        <div style="display: none" id="portfolio-item-{{ photoshoot.id }}">
                            <div class="page-title photoshoot-title">
                                <h2>{{ photoshoot.title | title}}</h2>
                            </div>
                            <div class="photoshoot-text">
                                {{ photoshoot.description }}
                            </div>
                            <div>
                                <a href="uploads/images/{{ photoshoot.id }}/{{ photoshoot.images.shiftU.image }}" data-fancybox="gallery-{{ photoshoot.id }}">
                                    <img class="img-photoshoot" src="uploads/images/{{ photoshoot.id }}/{{ photoshoot.images.shift.image }}" alt="">
                                </a>
                            </div>
                            <div class="photoshoot-description">
                                Model: <em>{{ photoshoot.model }}</em><br>
                                Photographer: <em>{{ photoshoot.photographer }}</em>
                            </div>
                            <div class="container-custom">
                                {% for image in photoshoot.images %}
                                    <a href="uploads/images/{{ photoshoot.id }}/{{ image.image }}" data-fancybox="gallery-{{ photoshoot.id }}">
                                        <img class="img-photoshoot" src="uploads/images/{{ photoshoot.id }}/{{ image.image }}" alt="">
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="text-center">
                <a class="btn btn-primary btn-xl mt-4" href="{{ path('portfolio') }}">Find out more</a>
            </div>
        </div>
        </div>
    </section>

    <!-- Services -->
    <section class="content-section bg-primary text-white text-center" id="services">
        <div class="container">
            <div class="content-section-heading">
                <h3 class="text-secondary mb-0">Services</h3>
                <h2 class="mb-5">What We Offer</h2>
            </div>
            <div class="row">
                <div class="col-lg-6 col-sm-6 mb-5 mb-lg-4">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="icon-screen-smartphone"></i>
          </span>
                    <h4>
                        <strong>Responsive</strong>
                    </h4>
                    <p class="text-faded mb-0">Looks great on any screen size!</p>
                </div>
                <div class="col-lg-6 col-sm-6 mb-5 mb-lg-4">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="icon-pencil"></i>
          </span>
                    <h4>
                        <strong>Redesigned</strong>
                    </h4>
                    <p class="text-faded mb-0">Freshly redesigned for Bootstrap 4.</p>
                </div>
            </div>
                <div class="row">
                    <div class="col-lg-6 col-sm-6 mb-5 mb-lg-4">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="icon-like"></i>
          </span>
                    <h4>
                        <strong>Favorited</strong>
                    </h4>
                    <p class="text-faded mb-0">Millions of users
                        <i class="fas fa-heart"></i>
                        Start Bootstrap!</p>
                </div>
                <div class="col-lg-6 col-sm-6 mb-5 mb-lg-4">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="icon-mustache"></i>
          </span>
                    <h4>
                        <strong>Question</strong>
                    </h4>
                    <p class="text-faded mb-0">I mustache you a question...</p>
                </div>
            </div>
            </div>
        </div>
    </section>

    <!-- Blog -->
    <section class="content-section" id="blog">
        <div class="content-section-heading text-center">
            <h3 class="text-secondary mb-0">Sneak peaks</h3>
            <h2 class="mb-3">Soon...❤️</h2>
        </div>
        <div class="scrolling-wrapper">
            {% for sneakPeak in mainSneakPeaks %}
                <div class="col-lg-5 col-sm-5 col-10 card portfolio-window mx-1">
                    <a class="portfolio-item" data-fancybox data-src="#portfolio-item-{{ sneakPeak.id }}" href="javascript:;">
                    <span class="caption">
                      <span class="caption-content">
                        <h2>{{ sneakPeak.title }}</h2>
                        <p class="mb-0">{{ sneakPeak.shortDescription }}</p>
                      </span>
                    </span>
                        <img class="img-portfolio" src="uploads/images/{{ sneakPeak.id }}/{{ sneakPeak.images.shiftU.image }}" alt="">
                    </a>
                    <div style="display: none" id="portfolio-item-{{ sneakPeak.id }}">
                        <div class="page-title photoshoot-title">
                            <h2>{{ sneakPeak.title | title}}</h2>
                        </div>
                        <div class="photoshoot-text">
                            {{ sneakPeak.description }}
                        </div>
                        <div>
                            <a href="uploads/images/{{ sneakPeak.id }}/{{ sneakPeak.images.shiftU.image }}" data-fancybox="gallery-{{ sneakPeak.id }}">
                                <img class="img-photoshoot" src="uploads/images/{{ sneakPeak.id }}/{{ sneakPeak.images.shift.image }}" alt="">
                            </a>
                        </div>
                        <div class="photoshoot-description">
                            Model: <em>{{ sneakPeak.model }}</em><br>
                            Photographer: <em>{{ sneakPeak.photographer }}</em>
                        </div>
                        <div class="container-custom">
                            {% for image in sneakPeak.images %}
                                <a href="uploads/images/{{ sneakPeak.id }}/{{ image.image }}" data-fancybox="gallery-{{ sneakPeak.id }}">
                                    <img class="img-photoshoot" src="uploads/images/{{ sneakPeak.id }}/{{ image.image }}" alt="">
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}

            <a class="next-button card mx-3" style="box-shadow: unset" href="{{ path('sneakPeakPortfolio') }}">
                <i class="far fa-arrow-alt-circle-right"></i>
            </a>
        </div>
    </section>

    <!-- About -->
    <section class="about_us-section" id="about">
        <div class="content-section-heading text-center">
            <h3 class="text-secondary mb-0">A few words</h3>
            <h2 class="mb-3 text-light text-stroke">Abous us</h2>
        </div>
        <div class="modified-row portfolio-section">
            <div class="col-sm-12 col-lg-8 py-4">
                <!-- Instagram WIDGET -->
