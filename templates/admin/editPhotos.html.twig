{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="card-header row">
    <div class="col-4 col-md-2 col-sm-12">
        <i class="fas fa-table"></i> Photos
    </div>
    <div class="col-lg-8 col-md-10 col-sm-12">
        {{ form_start(form, {'attr': {'class':'form-inline'} }) }}
            {{ form_row(form.images) }}
        <button type="submit" class="btn btn-primary btn-lg offset-lg-1 offset-sm-0 mt-lg-4 mt-sm-0" >Add</button>
        {{ form_end(form) }}
    </div>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Image Preview</th>
                <th>Manipulations</th>
            </tr>
            </thead>
            <tbody>
            {% for image in images %}
                <tr>
                    <td><img style="height: 200px;width: 200px; object-fit: contain; text-align: center" src ='/uploads/images/{{ image.Photoshoot.id }}/{{ image.image }}'></td>
                    <td>
                        <br><br><br><a class="btn btn-danger btn-lg text-light" href="{{ path('deleteImage', {'id': image.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

